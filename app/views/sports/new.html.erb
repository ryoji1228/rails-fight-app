<h1>試合結果登録</h1>

<%= form_with model: @sport, local: true do |f| %>

<div class="form-group">
    <label>年度</label>
    <%= f.number_field :year, class: "form-control" %>
</div>

<div class="form-group">
    <label>月</label>
    <%= f.number_field :month, class: "form-control" %>
</div>

<div class="form-group">
    <label>赤コーナー</label>
    <%= f.text_field :name1, class: "form-control" %>
</div>
<div class="form-group">
    <label>青コーナー</label>
    <%= f.text_field :name2, class: "form-control" %>
</div>
<div class="form-group">
    <label>勝者</label>
    <%= f.select :result, ["赤コーナー", "青コーナー"] , {}, {class: "form-control"} %>
</div>
<%= link_to "戻る", sports_path, class: "btn btn-secondary" %>
<%= f.submit "登録", class: "btn btn-primary"%>
<% end %>